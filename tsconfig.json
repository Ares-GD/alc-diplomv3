{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // <-- Добавлено: базовый путь для абсолютных импортов
    "paths": {
      "@/*": [
        "./src/*",
        "./utils/*"
      ] // <-- Используйте абсолютные пути через @/
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/app/components/common/Sidebar/Sidebar.tsx", "src/app/api/auth/register/route.ts", "src/middleware/cors.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
